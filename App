<body>
  <div class="container">
    <h1>Trinkgeld &amp; Rückgeld</h1>

    <label for="betrag">Rechnungsbetrag (€)</label>
    <input id="betrag" type="number" inputmode="decimal" step="0.01" min="0" placeholder="z.B. 37.50">

    <label for="gezahlt">Gezahlt (€)</label>
    <input id="gezahlt" type="number" inputmode="decimal" step="0.01" min="0" placeholder="z.B. 50">

    <label for="machAuf">Mach auf (€ – optional)</label>
    <input id="machAuf" type="number" inputmode="decimal" step="0.01" min="0" placeholder="z.B. 40">

    <div id="error" class="error"></div>

    <div class="result">
      <div class="row">
        <span>Trinkgeld:</span>
        <strong id="trinkgeld">0,00&nbsp;€</strong>
      </div>
      <div class="row">
        <span>Rückgeld:</span>
        <strong id="rueckgeld">0,00&nbsp;€</strong>
      </div>
    </div>
  </div>

  <script>
    function formatEuro(v) {
      if (isNaN(v)) v = 0;
      return v.toFixed(2).replace('.', ',') + ' €';
    }

    function calc() {
      const betrag = parseFloat(betragInput.value.replace(',', '.'));
      const gezahlt = parseFloat(gezahltInput.value.replace(',', '.'));
      const machAufValue = machAufInput.value.trim();
      const machAuf = machAufValue === '' ? NaN : parseFloat(machAufValue.replace(',', '.'));

      errorDiv.textContent = '';

      if (isNaN(betrag) || isNaN(gezahlt)) {
        trinkgeldSpan.textContent = '0,00 €';
        rueckgeldSpan.textContent = '0,00 €';
        return;
      }

      let trinkgeld = 0;
      let rueckgeld = 0;

      if (!isNaN(machAuf) && machAuf >= betrag) {
        trinkgeld = machAuf - betrag;
        rueckgeld = gezahlt - machAuf;

        if (rueckgeld < 0) {
          errorDiv.textContent = 'Achtung: Gezahlt ist weniger als „Mach auf“.';
        }
      } else {
        const diff = gezahlt - betrag;
        trinkgeld = diff > 0 ? diff : 0;
        rueckgeld = 0;

        if (diff < 0) {
          errorDiv.textContent = 'Achtung: Gezahlt ist weniger als Rechnungsbetrag.';
        }
      }

      trinkgeldSpan.textContent = formatEuro(trinkgeld);
      rueckgeldSpan.textContent = formatEuro(rueckgeld);
    }

    const betragInput = document.getElementById('betrag');
    const gezahltInput = document.getElementById('gezahlt');
    const machAufInput = document.getElementById('machAuf');
    const errorDiv = document.getElementById('error');
    const trinkgeldSpan = document.getElementById('trinkgeld');
    const rueckgeldSpan = document.getElementById('rueckgeld');

    [betragInput, gezahltInput, machAufInput].forEach(el => {
      el.addEventListener('input', calc);
    });
  </script>
</body>
</html>
